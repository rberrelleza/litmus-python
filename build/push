#!/bin/bash
set -e

IMAGEID=$( docker images -q litmuschaos/py-runner)

if [ ! -z "${DNAME}" ] && [ ! -z "${DPASS}" ];
then
  docker login -u "${DNAME}" -p "${DPASS}";
  #Push to docker hub repository with latest tag
  docker tag ${IMAGEID} litmuschaos/py-runner:ci
  docker push litmuschaos/py-runner:ci;
else
  echo "No docker credentials provided. Skip uploading litmuschaos/py-runner:ci to docker hub";
fi;
